<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   xmlns:tools="http://schemas.android.com/tools"
                                   android:orientation="vertical"
                                   android:layout_marginEnd="@dimen/elmenus_tag_margin_end"
                                   android:layout_width="@dimen/tag_item_cardview_width"
                                   android:layout_height="@dimen/tag_item_card_view_height">

    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                       android:layout_height="match_parent"
                                                       android:background="@color/grayColor">
        <ImageView android:id="@+id/iv_tag"
                   android:transitionName="elmenusItem"
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/tag_imagview_height"
                   app:layout_constraintStart_toStartOf="parent"
                   android:src="@drawable/ic_launcher_background"
                   android:scaleType="centerCrop"
                   app:layout_constraintTop_toTopOf="parent"/>

        <TextView android:id="@+id/tv_tag_name"
                android:layout_width="wrap_content"
                  android:layout_height="0dp"
                  app:layout_constraintTop_toBottomOf="@+id/iv_tag"
                  app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintEnd_toEndOf="parent"
                  android:gravity="center"
                  tools:text="Pizza"
                  android:textColor="@color/colorPrimary"
                  android:textSize="@dimen/item_tag_name_text_size"
                  android:textStyle="italic"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>